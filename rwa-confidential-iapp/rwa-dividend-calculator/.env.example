# iExec Application Configuration
APP_NAME=PriVest Confidential Calculator
APP_VERSION=1.0.0

# Tier Configuration (can override in input)
ENABLE_PERFORMANCE_BONUS=true
MAX_BONUS_CAP=1.50
MIN_PAYOUT=1
ROUNDING_PRECISION=2

# Logging
LOG_LEVEL=INFO
ENABLE_AUDIT_LOG=true

# Security
ENABLE_INPUT_VALIDATION=true
MAX_INVESTORS=1000
MIN_STAKE=0.01

# Deployment
IEXEC_CHAIN=arbitrum-sepolia-testnet
IEXEC_TAG=tee-scone
IEXEC_WORKERPOOL=debug-v8-bellecour.main.pools.iexec.eth


docker tag privest-iapp:latest holyaustin/privest-iapp:


# Create iApp manifest
cat > iexec.json << 'EOF'
{
  "description": "PriVest Confidential RWA Dividend Calculator - Runs confidential profit calculations in TEE",
  "version": "1.0.0",
  "author": "PriVest Team",
  "license": "MIT",
  "tags": ["tee", "scone", "confidential", "rwa", "dividend", "privacy"],
  "app": {
    "owner": "0xYourWalletAddress",
    "name": "PriVest-RWA-Calculator",
    "type": "DOCKER",
    "multiaddr": "docker.io/holyaustin/privest-iapp:latest",
    "checksum": "0x",
    "mrenclave": {}
  },
  "workpool": {
    "category": "0"
  }
}
EOF